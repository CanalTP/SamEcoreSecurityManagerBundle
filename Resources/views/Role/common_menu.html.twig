{% if (link_list is not defined) or (link_list != false) %}
    <a class="btn btn-default" href="{{ path('sam_role') }}">
        <span class="glyphicon glyphicon-arrow-left"></span>
        {{ 'role.list.back'|trans({}, "FlexyDatabaseConfigBundle") }}
    </a>
{% endif %}

{% if (link_add_role is not defined) or (link_add_role != false) %}
    {% if is_granted('BUSINESS_MANAGE_ROLE') %}
        <a class="btn btn-primary" href="{{ path('sam_role_new') }}">
            <span class="glyphicon glyphicon-plus"></span>
            {{ 'role.list.add'|trans({}, "FlexyDatabaseConfigBundle") }}
        </a>
    {% endif %}
{% endif %}